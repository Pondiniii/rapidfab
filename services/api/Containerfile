# Multi-stage build for RapidFab API

# Stage 1: Build
FROM rust:alpine AS builder

RUN apk add --no-cache musl-dev pkgconfig openssl-dev

WORKDIR /app

ENV SQLX_OFFLINE=true

# Layer 1: Build dependencies only (cached until Cargo.toml/Cargo.lock changes)
COPY Cargo.toml Cargo.lock ./
COPY .sqlx ./.sqlx
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    touch src/lib.rs && \
    cargo build --locked && \
    rm -rf src

# Layer 2: Build actual application (fast rebuild when only code changes)
COPY src ./src
COPY migrations ./migrations
# Clean only app artifacts, keep dependencies in cache
RUN cargo clean -p rapidfab-api && cargo build --locked

# Stage 2: Runtime
FROM alpine:latest

RUN apk add --no-cache ca-certificates libgcc curl postgresql-client

WORKDIR /app

COPY --from=builder /app/target/debug/rapidfab-api .
COPY --from=builder /app/migrations ./migrations
COPY docker-entrypoint.sh .

RUN chmod +x docker-entrypoint.sh

ENV RUST_LOG=info
ENV API_HOST=0.0.0.0
ENV API_PORT=8080

EXPOSE 8080

ENTRYPOINT ["./docker-entrypoint.sh"]
CMD ["./rapidfab-api"]
