# Multi-stage build for upload microservice

# Stage 1: Build
FROM rust:1.75-alpine AS builder

RUN apk add --no-cache musl-dev

WORKDIR /app

# Layer 1: Build dependencies only (cached until Cargo.toml changes)
COPY Cargo.toml Cargo.lock ./
RUN mkdir src && \
    echo "fn main() {}" > src/main.rs && \
    cargo build --release && \
    rm -rf src

# Layer 2: Build actual application
COPY src ./src
RUN cargo clean -p upload-service && cargo build --release

# Stage 2: Runtime
FROM alpine:latest

RUN apk add --no-cache ca-certificates libgcc

WORKDIR /app

COPY --from=builder /app/target/release/upload-service .

ENV RUST_LOG=info
ENV UPLOAD_HOST=0.0.0.0
ENV UPLOAD_PORT=8082

EXPOSE 8082

CMD ["./upload-service"]
