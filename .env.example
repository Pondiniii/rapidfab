# Root .env.example for RapidFab.xyz
# Copy to .env and adjust values

# Database
DATABASE_URL=postgres://rapidfab:rapidfab-dev@localhost:5432/rapidfab

# API Service
API_HOST=0.0.0.0
API_PORT=8080
RUST_ENV=development
RUST_LOG=info

# Upload Service
UPLOAD_HOST=0.0.0.0
UPLOAD_PORT=8082
UPLOAD_TICKET_SECRET=dev-secret-change-in-production-to-random-64-chars

# Internal Service Authentication
INTERNAL_SERVICE_TOKEN=change-this-in-production-random-64-chars

# Hetzner S3 Storage
S3_ENDPOINT=https://fsn1.your-objectstorage.com
S3_BUCKET=rapidfab
S3_REGION=eu-central-1
S3_ACCESS_KEY_ID=your-access-key-here
S3_SECRET_ACCESS_KEY=your-secret-key-here
S3_PUBLIC_ENDPOINT=http://localhost:9000

# Upload Quotas & Limits
QUOTA_ANON_DAILY_MB=100
QUOTA_USER_MONTHLY_GB=20
MAX_FILE_MB=500
USER_HOURLY_GB=2
IP_DAILY_MB=500
ANON_TTL_DAYS=7

# FDM Pricing Service
PRICING_FDM_HOST=0.0.0.0
PRICING_FDM_PORT=8083
ORCA_PROFILES_DIR=/app/profiles
ORCA_BINARY=orca-slicer
TEMP_DIR=/tmp/pricing-fdm

# Pricing Parameters
BASE_FEE_USD=5.00
MACHINE_RATE_USD_PER_HOUR=10.00
MARGIN_MULTIPLIER=1.30

# Material Costs (per gram)
MATERIAL_PLA_COST_PER_G=0.02
MATERIAL_ABS_COST_PER_G=0.025
MATERIAL_PETG_COST_PER_G=0.03
MATERIAL_ABS_ESD_COST_PER_G=0.035
MATERIAL_ASA_COST_PER_G=0.028
MATERIAL_NYLON_COST_PER_G=0.04
MATERIAL_PC_COST_PER_G=0.045
MATERIAL_TPU_COST_PER_G=0.035

# Pricing Service Limits
MAX_FILE_SIZE_MB=100
REQUEST_TIMEOUT_SECS=60
