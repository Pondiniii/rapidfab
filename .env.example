# Root .env.example for RapidFab.xyz
# Copy to .env and adjust values

# Database
DATABASE_URL=postgres://rapidfab:rapidfab-dev@localhost:5432/rapidfab

# API Service
API_HOST=0.0.0.0
API_PORT=8080
RUST_ENV=development
RUST_LOG=info

# Upload Service
UPLOAD_HOST=0.0.0.0
UPLOAD_PORT=8082
UPLOAD_TICKET_SECRET=dev-secret-change-in-production-to-random-64-chars

# Hetzner S3 Storage
S3_ENDPOINT=https://fsn1.your-objectstorage.com
S3_BUCKET=rapidfab
S3_REGION=eu-central-1
S3_ACCESS_KEY_ID=your-access-key-here
S3_SECRET_ACCESS_KEY=your-secret-key-here

# Upload Quotas & Limits
QUOTA_ANON_DAILY_MB=100
QUOTA_USER_MONTHLY_GB=20
MAX_FILE_MB=500
USER_HOURLY_GB=2
IP_DAILY_MB=500
ANON_TTL_DAYS=7
